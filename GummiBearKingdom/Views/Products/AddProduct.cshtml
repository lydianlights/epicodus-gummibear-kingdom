@model GummiBearKingdom.Models.Product

@{
  ViewData["Title"] = "Gummi Kingdom - Add Product";
  Layout = "_Layout";
}

<nav class="main-nav">
  <a href=@Url.Action("Index", "Home")>Home</a>
  <a href=@Url.Action("Index", "Products")>Products</a>
  <a class="active">Add New</a>
</nav>

<div class="section-header">
  <h2>Add a new product</h2>
</div>

<div id="new-product-form">
  @using (Html.BeginForm())
  {
    <div class="form-group">
      @Html.LabelFor(m => m.Name, "Product Name")
      @Html.TextBoxFor(m => m.Name)
    </div>

    <div class="form-group">
      @Html.LabelFor(m => m.Cost, "Price")
      @Html.TextBoxFor(m => m.Cost)
    </div>

    <div class="form-group">
      @Html.LabelFor(m => m.Description, "Description")
      @Html.TextAreaFor(m => m.Description)
    </div>

    <button type="submit" class="btn btn-go">Add Product</button>
  }
</div>
