@model GummiBearKingdom.Models.Product

@{
  ViewData["Title"] = "Gummi Kingdom - Add Product";
  Layout = "_Layout";
}

<h2>Add a new product</h2>

@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(m => m.Name, "Product Name")
    @Html.TextBoxFor(m => m.Name)
  </div>

  <div class="form-group">
    @Html.LabelFor(m => m.Cost, "Price")
    $@Html.TextBoxFor(m => m.Cost)
  </div>

  <div class="form-group">
    @Html.LabelFor(m => m.Description, "Description")
    @Html.TextAreaFor(m => m.Description)
  </div>

  <input type="submit" value="Add Product" />
}

@Html.ActionLink("Back", "Index")
